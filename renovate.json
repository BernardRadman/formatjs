{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "packages/react-intl/example-sandboxes/**"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "cargo"
      ],
      "enabled": false
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}